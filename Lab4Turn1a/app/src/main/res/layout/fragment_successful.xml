<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.hau.lab4turn1a.SuccessfulFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#50e3ac"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Payment successful"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="13dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="40,00$"
                android:textColor="#338c78"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:paddingTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="RECEPIENT"
                android:textSize="15sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Lester Nygaard"
                android:textColor="#338c78"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="NOTE"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="13dp"
            android:paddingBottom="60dp"

            android:layout_height="wrap_content">
            <TextView
                android:text="It was a humorously perilous business for both of us"
                android:layout_width="wrap_content"
                android:textColor="#338c78"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="30dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/circle_check"
                android:alpha="0.5"
                android:scaleType="fitStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
