<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hau.homeworksession3.ActivityA">

    <TextView
        android:id="@+id/tv_on_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="69dp"
        android:text="onCreate"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tv_on_pause"
        android:layout_alignEnd="@+id/tv_on_pause" />

    <TextView
        android:id="@+id/tv_on_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_on_create"
        android:layout_marginTop="10dp"
        android:text="onStart:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_on_resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_on_restart"
        android:layout_marginTop="10dp"
        android:text="onResume:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_on_restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_on_start"
        android:layout_marginTop="10dp"
        android:text="onRestart:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_on_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_on_pause"
        android:layout_marginTop="10dp"
        android:text="onStop:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_on_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_on_resume"
        android:layout_marginTop="10dp"
        android:text="onPause:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="onDestroy:"
        android:id="@+id/tv_on_destroy"
        android:layout_below="@+id/tv_on_stop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="a"
        android:id="@+id/tv_count_on_create2"
        android:layout_alignTop="@+id/tv_on_create"
        android:layout_toRightOf="@+id/tv_on_restart"
        android:layout_toEndOf="@+id/tv_on_restart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="b"
        android:id="@+id/tv_count_on_start"
        android:layout_above="@+id/tv_on_restart"
        android:layout_alignRight="@+id/tv_on_restart"
        android:layout_alignEnd="@+id/tv_on_restart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="c"
        android:id="@+id/tv_count_on_restart2"
        android:layout_alignTop="@+id/tv_on_restart"
        android:layout_toRightOf="@+id/tv_on_resume"
        android:layout_toEndOf="@+id/tv_on_resume" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="d"
        android:id="@+id/tv_count_on_resume2"
        android:layout_alignTop="@+id/tv_on_resume"
        android:layout_toRightOf="@+id/tv_count_on_restart2"
        android:layout_toEndOf="@+id/tv_count_on_restart2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="e"
        android:id="@+id/tv_count_on_pause"
        android:layout_alignTop="@+id/tv_on_pause"
        android:layout_alignLeft="@+id/tv_count_on_create2"
        android:layout_alignStart="@+id/tv_count_on_create2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="g"
        android:id="@+id/tv_count_on_stop"
        android:layout_alignTop="@+id/tv_on_stop"
        android:layout_alignRight="@+id/tv_on_restart"
        android:layout_alignEnd="@+id/tv_on_restart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="h"
        android:id="@+id/tv_count_on_destroy"
        android:layout_alignTop="@+id/tv_on_destroy"
        android:layout_toRightOf="@+id/tv_count_on_restart2"
        android:layout_toEndOf="@+id/tv_count_on_restart2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Activity B"
        android:id="@+id/btn_change_activityB"
        android:layout_below="@+id/tv_on_destroy"
        android:layout_toRightOf="@+id/tv_on_create"
        android:layout_toEndOf="@+id/tv_on_create"
        android:layout_marginTop="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ActivityA"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/tv_count_on_resume2"
        android:layout_alignStart="@+id/tv_count_on_resume2" />

</RelativeLayout>
