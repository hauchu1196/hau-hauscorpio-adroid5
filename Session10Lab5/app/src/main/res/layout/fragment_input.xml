<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.InputFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_amount"
                android:padding="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Amount"
                android:textColor="#00b9e6"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:textSize="40sp"
                android:inputType="number"
                android:layout_alignBaseline="@+id/tv_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_attach_money_black_24dp"
                android:layout_toRightOf="@+id/tv_amount" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sendto"
                android:padding="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Send to"
                android:textColor="#00b9e6"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_alignBaseline="@+id/tv_sendto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_sendto" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_note"
                android:padding="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="     Note"
                android:textColor="#00b9e6"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:paddingBottom="10dp"
                android:text="It was a"
                android:layout_alignBaseline="@+id/tv_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_note" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
