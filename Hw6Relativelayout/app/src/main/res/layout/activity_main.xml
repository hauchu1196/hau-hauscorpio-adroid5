<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hau.hw6relativelayout.MainActivity">

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:text="THRUSDAY, JULY 14" />

    <TextView
        android:id="@+id/tv_for_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_day"
        android:text="For You"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/circle" />

    <View
        android:id="@+id/v_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_for_you"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#2196F3" />

    <ImageView
        android:id="@+id/iv_shape1"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@+id/v_line1"
        android:layout_marginRight="5dp"
        android:background="@drawable/shape" />

    <ImageView
        android:id="@+id/iv_shape2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/iv_shape1"
        android:layout_toRightOf="@+id/iv_shape1"
        android:background="@drawable/shape" />

    <ImageView
        android:id="@+id/iv_shape3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/iv_shape1"
        android:layout_toRightOf="@+id/iv_shape1"
        android:background="@drawable/shape" />

    <ImageView
        android:id="@+id/iv_shape4"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@+id/v_line1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/iv_shape3"
        android:background="@drawable/shape" />


    <ImageView
        android:id="@+id/iv_shape6"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/iv_shape1"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape" />

    <ImageView
        android:id="@+id/iv_shape7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/iv_shape1"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/iv_shape6"
        android:background="@drawable/shape" />

    <ImageView
        android:id="@+id/iv_shape8"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/iv_shape1"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_shape7"
        android:background="@drawable/shape" />

    <ImageView
        android:id="@+id/iv_shape9"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/iv_shape1"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_shape8"
        android:background="@drawable/shape" />

    <ImageView
        android:id="@+id/iv_shape10"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/iv_shape1"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_shape9"
        android:background="@drawable/shape" />

    <View
        android:id="@+id/v_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_shape10"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#2196F3" />

    <TextView
        android:id="@+id/tv_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_line2"
        android:text="Recently Played"
        android:textColor="#2196F3"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_played"
        android:id="@+id/ll_1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_shape11"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape" />

        <ImageView
            android:id="@+id/id_shape12"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:background="@drawable/shape" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/ll_1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_icon1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape"/>
        <ImageView
            android:id="@+id/iv_icon2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_height="30dp"
            android:background="@drawable/shape"/>
        <ImageView
            android:id="@+id/iv_icon3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_height="30dp"
            android:background="@drawable/shape"/>
        <ImageView
            android:id="@+id/iv_icon4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_height="30dp"
            android:background="@drawable/shape"/>
        <ImageView
            android:id="@+id/iv_icon5"
            android:layout_width="0dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@drawable/shape"/>
    </LinearLayout>
</RelativeLayout>
